---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Página no encontrada">
  <div class="min-h-screen bg-gradient-to-br from-neutral-50 via-rose-50/30 to-neutral-50 flex items-center justify-center px-4">
    <div class="text-center max-w-md">
      <!-- Corazón roto ilustración -->
      <div class="mb-8">
        <svg class="w-24 h-24 mx-auto text-rose-300" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <div class="relative">
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="w-32 h-0.5 bg-neutral-300 rotate-45"></div>
          </div>
        </div>
      </div>
      
      <!-- Mensaje -->
      <h1 class="text-6xl font-light text-neutral-800 mb-4">404</h1>
      <h2 class="text-2xl font-light text-neutral-700 mb-3">
        Página no encontrada
      </h2>
      <p class="text-neutral-500 mb-8 italic">
        Este poema aún no ha sido escrito...
      </p>
      
      <!-- Botones -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-rose-600 text-white rounded-lg hover:bg-rose-700 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Volver al inicio
        </a>
        
        <a 
          href="/poemas"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-rose-300 text-rose-700 rounded-lg hover:bg-rose-50 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          Ver todos los poemas
        </a>
      </div>
    </div>
  </div>
</Layout>