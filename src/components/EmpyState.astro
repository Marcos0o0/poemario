---
interface Props {
  title: string;
  description: string;
  icon?: 'heart' | 'book' | 'pen';
  actionText?: string;
  actionHref?: string;
}

const { 
  title, 
  description, 
  icon = 'heart',
  actionText,
  actionHref 
} = Astro.props;

const icons = {
  heart: `<path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>`,
  book: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>`,
  pen: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>`
};
---

<div class="text-center py-16 px-4">
  <div class="max-w-md mx-auto">
    <!-- Icono -->
    <svg 
      class="w-20 h-20 mx-auto mb-6 text-neutral-300" 
      fill={icon === 'heart' ? 'currentColor' : 'none'}
      stroke={icon !== 'heart' ? 'currentColor' : 'none'}
      viewBox="0 0 24 24"
      set:html={icons[icon]}
    />
    
    <!-- Título -->
    <h3 class="text-2xl font-light text-neutral-700 mb-3">
      {title}
    </h3>
    
    <!-- Descripción -->
    <p class="text-neutral-500 italic mb-8">
      {description}
    </p>
    
    <!-- Acción (opcional) -->
    {actionText && actionHref && (
      <a 
        href={actionHref}
        class="inline-flex items-center gap-2 px-6 py-3 bg-rose-600 text-white rounded-lg hover:bg-rose-700 transition-colors font-sans text-sm"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        {actionText}
      </a>
    )}
  </div>
</div>